{
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": true,
		"module": "es6",
		"target": "es5",
		"jsx": "react",
		"allowJs": true,
		"moduleResolution": "node",

		"baseUrl": "src",
		"paths": {
			"@/*": ["*"],
			"@components/*": ["components/*"],
			"@widgets/*": ["widgets/*"],
			"@pages/*": ["pages/*"],
			"@images/*": ["assets/images/*"],
			"@fonts/*": ["assets/fonts/*"],
			"@styles/*": ["styles/*"],
			"@utils/*": ["utils/*"]
		}
	}
}
